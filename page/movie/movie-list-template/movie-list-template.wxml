<import src="../movie-template/movie-template.wxml" />

<template name="movieListTemplate">
  <view class="movie-list-container">
    <view class="inner-container">
      <view class="movie-head" >
        <text class="slogan">{{paihang}}</text>
        <view class="more">
          <text class="more-text" bindtap='morel' data-current='{{paihang}}'>更多</text>
          <image class="more-img" src="http://www.wwtliu.com/sxtstu/mpweixin/images/arrow-right.png"></image>
        </view>
      </view>
      <view class="movies-container">
        <block wx:for="{{movies}}" wx:key>
          <template is="movieTemplate" data="{{...item}}"/>
        </block>
      </view>
    </view>
  </view>
</template>