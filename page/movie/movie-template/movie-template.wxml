<import src="../star-template/star-template.wxml" />

<template name="movieTemplate">
  <view class="movie-container" bindtap='detailHandler' data-movieid='{{id}}'>
    <image class="movie-img" src="{{large}}"></image>
    <text class="movie-title">{{title}}</text>
    <template is="starTemplate" data="{{star:star, average:average}}"/> 
  </view>
</template>